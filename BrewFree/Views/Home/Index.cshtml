        <script src="~/lib/jquery.easing/jquery.easing.js"></script>
        <script src="~/lib/jquery.countdown/dist/jquery.countdown.js"></script>
        <script src="~/lib/device.js/device.js"></script>
        <script src="~/lib/wow/dist/wow.js"></script>
        <script src="~/lib/smoothscroll-for-websites/SmoothScroll.js"></script>
